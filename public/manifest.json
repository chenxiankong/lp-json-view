{
  "manifest_version": 2,
  "name": "Lp Json-view",
  "version": "0.1.0",
  "description": "JSON View Tree，JSON 格式转换查看",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Json View",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": ["contentScript.js"]
    }
  ],
  "homepage_url": "https://lp-pwa.gitee.io/json-view/?parse"
}
